<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/recipeSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#CA0B0B" />

        <EditText
            android:id="@+id/modifyRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#CA0B0B"
            android:hint="Título" />

        <Spinner
            android:id="@+id/modifyRecipeCategory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#CA0B0B"
            android:entries="@array/categories" />

        <Spinner
            android:id="@+id/modifyRecipeType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#CA0B0B"
            android:entries="@array/types" />

        <EditText
            android:id="@+id/modifyRecipeIngredients"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#CA0B0B"
            android:hint="Ingredientes" />

        <EditText
            android:id="@+id/modifyRecipeTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#CA0B0B"
            android:hint="Tiempo de preparación" />

        <EditText
            android:id="@+id/modifyRecipeInstructions"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#CA0B0B"
            android:hint="Modo de preparación" />

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Imagen" />

        <ImageView
            android:id="@+id/recipeImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_placeholder_image" />

        <Button
            android:id="@+id/modifyRecipeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar Receta" />

        <Button
            android:id="@+id/modifySalirRecipeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salir" />
    </LinearLayout>
</ScrollView>
